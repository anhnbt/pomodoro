{
  "name": "pomodoro",
  "version": "1.0.0",
  "description": "Tiện ích Pomodoro - đồng hồ đếm ngược giúp tập trung học bài trong 25 phút",
  "main": "script.js",
  "repository": "https://github.com/anhnbt/pomodoro.git",
  "author": "Nguyễn Bá Tuấn Anh <anhnbt.it@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bulma": "^0.9.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "autoprefixer": "^10.4.14",
    "bulma": "^0.9.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "sass": "^1.63.6"
  },
  "scripts": {
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "sass --no-source-map _sass/main.scss:dist/css/main.css",
    "css-postcss": "postcss --use autoprefixer --output css/main.css css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm run css-deploy && npm run js-build",
    "js-build": "babel _javascript --out-dir dist",
    "js-watch": "npm run js-build -- --watch",
    "start": "npm-run-all --parallel css-watch js-watch"
  }
}
